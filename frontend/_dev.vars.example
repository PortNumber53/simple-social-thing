# Worker Environment Variables (for Cloudflare Worker)
# These are used by wrangler dev and should be kept secret

# Google OAuth (Worker-side processing)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Stripe Configuration (Worker-side processing)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Social Media API Credentials
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
FACEBOOK_WEBHOOK_TOKEN=your_facebook_webhook_token
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
PINTEREST_CLIENT_ID=your_pinterest_client_id
PINTEREST_CLIENT_SECRET=your_pinterest_client_secret
THREADS_OAUTH_BASE=https://threads.net

# Backend Configuration
BACKEND_ORIGIN=http://localhost:18002
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
LOG_LEVEL=info
INTERNAL_WS_SECRET=your_internal_ws_secret_here

# Frontend Build Variables (VITE_* prefix - exposed to client)
VITE_WORKER_ORIGIN=http://localhost:18912
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
VITE_DISABLE_CF_PLUGIN=1

# Mock Auth (for local dev without real OAuth)
USE_MOCK_AUTH=false

# Hyperdrive Local Connection (for local Postgres emulation)
# Use your local DATABASE_URL from .env
CLOUDFLARE_HYPERDRIVE_LOCAL_CONNECTION_STRING_HYPERDRIVE=postgresql://user:password@localhost:5432/dbname
