# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Server Configuration
PORT=18002
ENVIRONMENT=dev

# Logging
LOG_LEVEL=info

# Stripe Configuration (for billing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Social Media Import Rate Limiting
# Requests per second (default: 1)
SOCIAL_IMPORT_INSTAGRAM_RPS=1
SOCIAL_IMPORT_FACEBOOK_RPS=1
SOCIAL_IMPORT_TIKTOK_RPS=1
SOCIAL_IMPORT_YOUTUBE_RPS=3
SOCIAL_IMPORT_X_RPS=1
SOCIAL_IMPORT_PINTEREST_RPS=1
SOCIAL_IMPORT_THREADS_RPS=1

# Burst rate for requests (default: 2)
SOCIAL_IMPORT_INSTAGRAM_BURST=2
SOCIAL_IMPORT_FACEBOOK_BURST=2
SOCIAL_IMPORT_TIKTOK_BURST=2
SOCIAL_IMPORT_YOUTUBE_BURST=3
SOCIAL_IMPORT_X_BURST=1
SOCIAL_IMPORT_PINTEREST_BURST=2
SOCIAL_IMPORT_THREADS_BURST=2

# Daily request limits (0 = unlimited)
SOCIAL_IMPORT_INSTAGRAM_DAILY_MAX=0
SOCIAL_IMPORT_FACEBOOK_DAILY_MAX=0
SOCIAL_IMPORT_TIKTOK_DAILY_MAX=0
SOCIAL_IMPORT_YOUTUBE_DAILY_MAX=0
SOCIAL_IMPORT_X_DAILY_MAX=0
SOCIAL_IMPORT_PINTEREST_DAILY_MAX=0
SOCIAL_IMPORT_THREADS_DAILY_MAX=0

# Internal WebSocket Secret (for backend-to-backend communication)
INTERNAL_WS_SECRET=your_internal_ws_secret_here
